{
  "name": "sylph-jsx",
  "version": "0.1.0",
  "description": "A lightweight, SolidJS-powered runtime for building declarative PixiJS experiences",
  "main": "./dist/index.js",
  "scripts": {
    "test": "vitest",
    "dev": "VITE_STAGE=DEV vite",
    "build": "npm run build:core && npm run build:runtime",
    "build:core": "vite build",
    "build:runtime": "tsc -b ./tsconfig.jsx-runtime.json",
    "fmt": "prettier --write \"src/**/*\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "analyze-bundle": "npx vite-bundle-analyzer",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*": "prettier --write"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "jsx",
    "pixi.js",
    "solidjs",
    "pixi",
    "solid",
    "reactive",
    "signal",
    "gamedev"
  ],
  "author": "me@davecampion.com",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "canvas": "^3.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "pixi.js": "8.14.0",
    "prettier": "^3.6.2",
    "solid-js": "1.9.4",
    "typescript": "^5.5.4",
    "vite": "7.1.5",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "vitest-webgl-canvas-mock": "^1.1.0"
  },
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "@solid-primitives/deep": "^0.2.9",
    "css": "^3.0.0",
    "shallow-equal": "^3.1.0",
    "vite-plugin-solid": "2.11.9"
  },
  "peerDependencies": {
    "pixi.js": "8.14.0",
    "solid-js": "1.9.4"
  }
}

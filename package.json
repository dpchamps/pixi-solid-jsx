{
  "name": "sylph",
  "version": "0.1.0",
  "private": true,
  "description": "sylph-jsx and related packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "fmt": "prettier --write \"packages/**/*\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*": "prettier --write"
  },
  "type": "module",
  "author": "me@davecampion.com",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "canvas": "^3.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "pixi.js": "8.14.0",
    "prettier": "^3.6.2",
    "solid-js": "1.9.4",
    "typescript": "^5.5.4",
    "vite": "7.1.5",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "vitest-webgl-canvas-mock": "^1.1.0"
  }
}

{
  "name": "sylph-jsx",
  "version": "0.1.0",
  "description": "A lightweight, SolidJS-powered runtime for building declarative PixiJS experiences",
  "main": "./dist/index.js",
  "scripts": {
    "test": "vitest",
    "dev": "VITE_STAGE=DEV vite",
    "build": "npm run build:core && npm run build:runtime",
    "build:core": "vite build",
    "build:runtime": "tsc -b ./tsconfig.jsx-runtime.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "jsx",
    "pixi.js",
    "solidjs",
    "pixi",
    "solid",
    "reactive",
    "signal",
    "gamedev"
  ],
  "author": "me@davecampion.com",
  "license": "MIT",
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "@solid-primitives/deep": "^0.2.9",
    "css": "^3.0.0",
    "shallow-equal": "^3.1.0",
    "vite-plugin-solid": "2.11.9"
  },
  "peerDependencies": {
    "pixi.js": "8.14.0",
    "solid-js": "1.9.4"
  }
}
